# ==============================================================================
# CV RAG Portfolio - Variables d'Environnement
# Copiez ce fichier en .env et remplissez les valeurs
# ==============================================================================

# ==============================================================================
# BASE DE DONNÃ‰ES POSTGRESQL (AWS RDS)
# ==============================================================================
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=cvdb
DB_USER=postgres
DB_PASSWORD=your_secure_password

# ==============================================================================
# APIs IA
# ==============================================================================
# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# OpenAI API (pour le routeur d'intention)
OPENAI_API_KEY=sk-xxxxx

# Voyage AI (embeddings et reranking)
VOYAGE_API_KEY=pa-xxxxx

# ==============================================================================
# DJANGO FRONTEND
# ==============================================================================
DJANGO_SECRET_KEY=your-very-long-and-secure-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# URL de l'API Backend (pour le frontend)
API_BASE_URL=http://api:8001

# ==============================================================================
# MONITORING (Optionnel)
# ==============================================================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=cv-rag-chatbot

# ==============================================================================
# ENVIRONNEMENT
# ==============================================================================
ENVIRONMENT=production
